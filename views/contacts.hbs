<h3 class="text-style-title">Contact Us</h3>
<hr/>

<div class="row">
	
  <form action="/Contacts" method="GET" class="col 4 offset-l3">
    <div class="row">
      
      <div class="input-field col s12">
        <input id="email2" type="email" name="email" class="validate" required="" aria-required="true">
        <label for="email2">Email</label>
      </div>

      <div class="input-field col s6">
          <input name="subject" type="text" class="validate">
          <label for="subject">Subject</label>
      </div>
      
      <div class="input-field col s12">
          <textarea id="textarea1" name="message" class="materialize-textarea"></textarea>
          <label for="textarea1">Message</label>
       </div>
    
      <div class="input-field col s12">
        <button onchange="window.location.href = '/';" class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
      </div>
    </div>
  </form>
 
</div>
